# Server Configuration
PORT=5001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# AI/ML API Configuration
# Option 1: OpenAI (paid)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Option 2: Google Gemini (FREE!)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Which AI to use: openai or gemini
AI_PROVIDER=gemini

# Database Schema
DATABASE_SCHEMA={"tables":{"users":{"columns":{"id":"INTEGER PRIMARY KEY","name":"VARCHAR(255)","email":"VARCHAR(255) UNIQUE","created_at":"TIMESTAMP"},"relationships":[]},"orders":{"columns":{"id":"INTEGER PRIMARY KEY","user_id":"INTEGER","total_amount":"DECIMAL(10,2)","status":"VARCHAR(50)","created_at":"TIMESTAMP"},"relationships":["FOREIGN KEY (user_id) REFERENCES users(id)"]},"products":{"columns":{"id":"INTEGER PRIMARY KEY","name":"VARCHAR(255)","price":"DECIMAL(10,2)","stock":"INTEGER","created_at":"TIMESTAMP"},"relationships":[]},"order_items":{"columns":{"id":"INTEGER PRIMARY KEY","order_id":"INTEGER","product_id":"INTEGER","quantity":"INTEGER","price":"DECIMAL(10,2)"},"relationships":["FOREIGN KEY (order_id) REFERENCES orders(id)","FOREIGN KEY (product_id) REFERENCES products(id)"]}}}

# Database Configuration (if needed)
DATABASE_URL=your_database_url_here

# Security
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100